%nav{ class: 'navbar navbar-default navbar-fixed-top', role: 'navigation' }
  %div{ class: 'navbar-header'}
    %button.some{ type: 'button', class: 'navbar-toggle', 'data-toggle': 'collapse', 'data-target': '#bs-example-navbar-collapse-1' }
      %span{ class: 'sr-only' } Toggle navigation
      %span.icon-bar
      %span.icon-bar
      %span.icon-bar
    %a.navbar-brand.some{ href: root_path }
      %span.glyphicon.glyphicon-home
  %div{ class: 'collapse navbar-collapse', id: 'bs-example-navbar-collapse-1'}
    %ul.nav.navbar-nav
      = menu_item('Users', users_path)
    %ul{ class: 'nav navbar-nav navbar-right' }
      %li.dropdown
        - if current_user
          %a{ href: '#', class: 'dropdown-toggle', 'data-toggle': 'dropdown' }
            = current_user.email
            %span.glyphicon.glyphicon-user
            %strong{ class: 'caret' }
          %ul.dropdown-menu
            %li
              = link_to t('.edit_profile'), edit_user_registration_path
            %li
              = link_to t('.logout'), destroy_user_session_path, method: :delete
        - else
          %a{ href: '#', class: 'dropdown-toggle', 'data-toggle': 'dropdown' }
            %span.glyphicon.glyphicon-user
            %strong{ class: 'caret' }
          %ul.dropdown-menu
            %li
              = link_to t('.login'), new_user_session_path
            %li
              = link_to t('.sign_up'), new_user_registration_path
